<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="www.rxfamilyuser.com">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".coom.Login.view.StartActivity"
            android:theme="@style/MyFullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 注明手机尺寸 -->
        <meta-data
            android:name="design_width"
            android:value="720" />
        <meta-data
            android:name="design_height"
            android:value="1280" />

        <activity android:name=".coom.Login.view.MainActivity"
            android:launchMode="singleInstance"/>
        <activity android:name=".coom.Login.view.LoginActivity" />
        <activity
            android:name=".coom.Login.view.GuideActivity"
            android:theme="@style/MyFullScreenTheme" />
        <activity android:name=".coom.sidebar.view.PersonageActivity" />
        <activity android:name=".coom.Login.view.RegisterActivity"></activity>
    </application>

</manifest>